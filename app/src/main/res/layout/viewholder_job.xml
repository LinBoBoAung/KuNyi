<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:background="@color/white">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tvJobTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Laundry"
            android:textColor="@color/black"
            android:textSize="40dp" />


        <TextView
            android:id="@+id/tvSalary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvJobTitle"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="25dp"
            android:text="$3000"
            android:textColor="@color/black"
            android:textSize="28dp" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvJobTitle"
            android:layout_marginTop="16dp"
            android:text="A laundry Attendant is responsible for providing a constant supply of clean linens for the enttire hotel.Laundry attedats also may be esponsile for cl..."
            android:textColor="	#A9A9A9"
            android:textSize="16dp" />


        <ImageView
            android:id="@+id/ivTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDescription"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_access_time_black_24dp" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDescription"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/ivTime"
            android:text=" 10Hours"
            android:textAllCaps="false"
            android:textColor="	#A9A9A9"
            android:textSize="16dp" />


        <ImageView
            android:id="@+id/ivLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ivTime"
            android:layout_toEndOf="@+id/tvTime"
            android:src="@drawable/ic_location_on_black_24dp" />

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDescription"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/ivLocation"
            android:text="Sanchaung"
            android:textAllCaps="false"
            android:textColor="	#A9A9A9"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/tvAppliedPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvTime"
            android:layout_alignParentEnd="true"
            android:text="3Person Applied"
            android:textAllCaps="false"
            android:textColor="@color/red"
            android:textSize="16dp" />


        <Button
            android:id="@+id/btnApply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btnSave"
            android:layout_marginBottom="@dimen/margin"
            android:layout_toEndOf="@+id/ivTime"
            android:background="@color/black"
            android:text="Apply"
            android:textAllCaps="false"
            android:textColor="@color/red" />


        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/tvSalary"
            android:layout_marginBottom="@dimen/margin"
            android:layout_marginTop="239dp"
            android:background="@color/black"
            android:text="Save"
            android:textColor="@color/red" />


    </RelativeLayout>

</android.support.v7.widget.CardView>
